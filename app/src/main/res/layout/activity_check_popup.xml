<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.srujan.com.gujaratitextreader.CheckPopup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Click button to begin test."
            android:textSize="24dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:onClick="beginTest"
            android:text="test"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:textSize="25dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sorryMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:textColor="#ff4466"
            android:textSize="20dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/buttonContainer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/makeChanges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:onClick="makeChanges"
                android:text="Make changes"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:onClick="info"
                android:text="Info"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
